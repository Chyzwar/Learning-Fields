import java.util.Arrays;




public class Soapbox extends Competitor

{
    //Measurement of audience reaction 1-100
    private int pub;
    //Level of Art
    private int lvl;
    //Maximum Number of Scores- I use it in some methods
    private static int numOfScores =5;

   //constructor for Soapbox object
    public Soapbox (int id,Name competitorName,int [] listOfScores,int pub,int lvl)
    {
    	super(id,competitorName,listOfScores);
    	this.pub = pub;
    	this.lvl= lvl;
    }
	
    
	//method to return audience response
	public String getPub()
	{
	String audience ="";
	audience = Integer.toString(pub);
	return audience;
	}
	
	//return Level of Art
	public int getLvl()
	{
	return lvl;
	}
	
	//method to return maximum number of Scores,
    public static int getMaxNumberOfScores()
    {
    return numOfScores;	
    }
	
    //Overall as average of marks with audience respond as multiplication
	public double getOverallScore()
	{
	int total = 0;
	for (int scoreIndex = 0;scoreIndex <numOfScores; scoreIndex++)	
		{
		total += listOfScores[scoreIndex];
		}
	return (double) total/(numOfScores) * pub/100;
	}
	
	//Method to display full details of selected Soapbox team
	public String getFullDetails()
	{
		String fullDetails = "Full details for " + competitorNumber + ":\r\nCompetitor #" + competitorNumber + " is " + competitorName.getFullName() + ".\r\n" +
				competitorName.getFullName() + " have level of art: " + String.valueOf(getLvl()) + " and responce from audience " + String.valueOf(getPub())  + "% , and received these scores: " + Arrays.toString(getListOfScores()).replace("[", "").replace("]", "") + ".\n" +
				"This gives an overall score of " + getOverallScore();
		return fullDetails;
	}

	
}




